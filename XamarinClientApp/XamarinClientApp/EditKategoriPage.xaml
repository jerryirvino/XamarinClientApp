<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinClientApp.EditKategoriPage">

  <StackLayout>
    <Label Text="ID" />
    <Entry x:Name="txtIdKategori" IsEnabled="False" Text="{Binding KategoriId}" />
    <Label Text="Nama Kategori" />
    <Entry x:Name="txtNamaKategori" Text="{Binding NamaKategori}" />
    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
      <Button x:Name="btnEdit" Text="Edit" BackgroundColor="Lime" />
      <Button x:Name="btnDelete" Text="Delete" BackgroundColor="Red" />
    </StackLayout>
  </StackLayout>
</ContentPage>